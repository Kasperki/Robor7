include "m8c.inc"


;--------------------------------------------------
; Constants for TimerUA API's.
;--------------------------------------------------

TimerUA_CONTROL_REG_START_BIT:             equ 0x01    ; Control register start bit
TimerUA_INT_REG:                           equ 0x0e1
TimerUA_INT_MASK:                          equ 0x10


;--------------------------------------------------
; Constants for TimerUA user defined values
;--------------------------------------------------

TimerUA_PERIOD:                            equ 0x13
TimerUA_COMPARE_VALUE:                     equ 0x00


;--------------------------------------------------
; Register Address Constants for TimerUA
;--------------------------------------------------

TimerUA_COUNTER_REG:                   equ 0x30   ; DR0 Counter register
TimerUA_PERIOD_REG:                    equ 0x31   ; DR1 Period register
TimerUA_COMPARE_REG:                   equ 0x32   ; DR2 CompareValue register
TimerUA_CONTROL_REG:                   equ 0x33   ; Control register
TimerUA_FUNC_REG:                      equ 0x30   ; Function register
TimerUA_INPUT_REG:                     equ 0x31   ; Input register
TimerUA_OUTPUT_REG:                    equ 0x32   ; Output register


;--------------------------------------------------
; TimerUA Macro 'Functions'
;--------------------------------------------------

   macro TimerUA_Start_M
   or    reg[TimerUA_CONTROL_REG],  TimerUA_CONTROL_REG_START_BIT
   endm

   macro TimerUA_Stop_M
   and   reg[TimerUA_CONTROL_REG], ~TimerUA_CONTROL_REG_START_BIT
   endm

   macro TimerUA_EnableInt_M
   M8C_EnableIntMask TimerUA_INT_REG, TimerUA_INT_MASK
   endm

   macro TimerUA_DisableInt_M
   M8C_DisableIntMask TimerUA_INT_REG, TimerUA_INT_MASK
   endm


